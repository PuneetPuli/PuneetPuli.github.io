---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/work">Work</HeaderLink>
			<HeaderLink href="/blog">Journal</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<div class="social-links">
			<a href="https://github.com/PuneetPuli" target="_blank" rel="noreferrer">GitHub</a>
			<a href="mailto:puli.puneet@gmail.com">Email</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 20px;
		background: var(--bg);
		border-bottom: 1px solid var(--line);
	}

	nav {
		max-width: var(--max);
		margin: 0 auto;
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 14px;
		padding: 18px 0;
	}

	h2 {
		margin: 0;
		font-size: 0.95rem;
		letter-spacing: -0.01em;
	}

	h2 a {
		text-decoration: none;
		border-bottom: 0;
	}

	.internal-links,
	.social-links {
		display: flex;
		gap: 12px;
		flex-wrap: wrap;
		align-items: baseline;
	}

	/* Let global.css control link underline style; keep active subtle */
	:global(nav a) {
		padding: 0;
		border-bottom-width: 1px;
	}

	:global(nav a.active) {
		border-bottom-color: var(--fg);
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>

