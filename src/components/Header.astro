---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <div class="identity">
      <a href="/">{SITE_TITLE}</a>
    </div>

    <div class="links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/work">Work</HeaderLink>
      <HeaderLink href="/blog">Journal</HeaderLink>
      <HeaderLink href="/now">Now</HeaderLink>
    </div>

    <div class="external">
      <a href="https://github.com/PuneetPuli" target="_blank" rel="noreferrer">GitHub</a>
      <a href="mailto:puli.puneet@gmail.com">Email</a>
    </div>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--line);
    background: var(--bg);
  }

  nav {
    max-width: var(--max);
    margin: 0 auto;
    padding: 18px 20px;
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: baseline;
    gap: 16px;
  }

  .identity a {
    font-size: 0.95rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    border-bottom: none;
  }

  .links,
  .external {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
  }

  /* Let global.css control underline + hover */
  :global(header a) {
    border-bottom-width: 1px;
  }

  :global(header a.active) {
    border-bottom-color: var(--fg);
  }

  @media (max-width: 720px) {
    nav {
      grid-template-columns: 1fr;
      gap: 10px;
    }
    .external {
      display: none;
    }
  }
</style>

